[run]
source = aiosmtplib
branch = true

[report]
show_missing = true
exclude_lines =
    if self.debug:
    pragma: no cover
    raise NotImplementedError
    if __name__ == .__main__.:
ignore_errors = true
omit =
    tests/*

[paths]
source =
   src/aiosmtplib
   .tox/*/lib/python*/site-packages/aiosmtplib
   .tox/pypy*/site-packages/aiosmtplib
